---
import BlueskyLayout from '../layouts/BlueskyLayout.astro';
import MainFeed from '../components/bluesky/MainFeed';
---

<BlueskyLayout title="ホーム - Bluesky LangApp">
  <MainFeed client:load />
</BlueskyLayout>

<script>
  // Check authentication on page load
  document.addEventListener('DOMContentLoaded', () => {
    const sessionId = localStorage.getItem('sessionId');
    if (!sessionId) {
      window.location.href = '/';
    }
  });
</script>