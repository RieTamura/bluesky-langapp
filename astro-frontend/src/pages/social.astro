---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Social Sharing - Bluesky LangApp">
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-3xl font-bold text-gray-900 mb-8">Social Learning Features</h1>
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Social Sharing Panel -->
        <div>
          <div id="social-sharing-panel"></div>
        </div>
        
        <!-- AT Protocol Integration Info -->
        <div class="bg-white rounded-lg shadow-md p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">AT Protocol Integration</h2>
          
          <div class="space-y-4">
            <div>
              <h3 class="text-lg font-medium text-gray-800 mb-2">Current Features</h3>
              <ul class="list-disc list-inside text-gray-600 space-y-1">
                <li>Share learning milestones to Bluesky</li>
                <li>Post daily study summaries</li>
                <li>Celebrate achievement streaks</li>
                <li>Custom learning progress posts</li>
              </ul>
            </div>
            
            <div>
              <h3 class="text-lg font-medium text-gray-800 mb-2">Data Sharing Format</h3>
              <p class="text-gray-600 text-sm mb-2">
                Your learning data is formatted using the <code class="bg-gray-100 px-1 rounded">bluesky-langapp-v1</code> 
                standard, ensuring compatibility with future AT Protocol applications.
              </p>
              <div class="bg-gray-50 p-3 rounded text-xs">
                <pre class="text-gray-700">{
  "format": "bluesky-langapp-v1",
  "summary": {
    "totalWords": 150,
    "knownWords": 45,
    "studyStreak": 7
  }
}</pre>
              </div>
            </div>
            
            <div>
              <h3 class="text-lg font-medium text-gray-800 mb-2">Privacy & Control</h3>
              <ul class="list-disc list-inside text-gray-600 space-y-1 text-sm">
                <li>You control what gets shared</li>
                <li>No personal vocabulary is posted publicly</li>
                <li>Only progress statistics are shared</li>
                <li>You can disconnect at any time</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Future Features Section -->
      <div class="mt-12 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-lg p-8">
        <h2 class="text-2xl font-semibold text-gray-900 mb-6">Coming Soon: Community Features</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="bg-white rounded-lg p-6 shadow-sm">
            <div class="text-blue-600 mb-3">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Community Feed</h3>
            <p class="text-gray-600 text-sm">See learning progress from people you follow on Bluesky</p>
          </div>
          
          <div class="bg-white rounded-lg p-6 shadow-sm">
            <div class="text-green-600 mb-3">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Learning Challenges</h3>
            <p class="text-gray-600 text-sm">Create and join community learning challenges</p>
          </div>
          
          <div class="bg-white rounded-lg p-6 shadow-sm">
            <div class="text-purple-600 mb-3">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Vocabulary Sharing</h3>
            <p class="text-gray-600 text-sm">Share and discover curated vocabulary lists</p>
          </div>
        </div>
        
        <div class="mt-6 text-center">
          <p class="text-gray-600 text-sm">
            These features are planned for future releases as part of our AT Protocol integration roadmap.
          </p>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<script>
  import SocialSharingPanel from '../components/atprotocol/SocialSharingPanel.tsx';
  import { createElement } from 'react';
  import { createRoot } from 'react-dom/client';

  // Mount the React component
  const container = document.getElementById('social-sharing-panel');
  if (container) {
    const root = createRoot(container);
    root.render(createElement(SocialSharingPanel));
  }
</script>