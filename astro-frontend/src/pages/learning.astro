---
import BlueskyLayout from '../layouts/BlueskyLayout.astro';
import LearningContent from '../components/bluesky/LearningContent';
---

<BlueskyLayout title="学習 - Bluesky LangApp">
  <LearningContent client:load />
</BlueskyLayout>

<script>
  // Check authentication on page load
  document.addEventListener('DOMContentLoaded', () => {
    const sessionId = localStorage.getItem('sessionId');
    if (!sessionId) {
      window.location.href = '/';
    }
  });
</script>