---
import BlueskyLayout from '../layouts/BlueskyLayout.astro';
import WordsContent from '../components/bluesky/WordsContent';
---

<BlueskyLayout title="単語帳 - Bluesky LangApp">
  <WordsContent client:load />
</BlueskyLayout>

<script>
  // Check authentication on page load
  document.addEventListener('DOMContentLoaded', () => {
    const sessionId = localStorage.getItem('sessionId');
    if (!sessionId) {
      window.location.href = '/';
    }
  });
</script>