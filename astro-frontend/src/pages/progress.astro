---
import BlueskyLayout from '../layouts/BlueskyLayout.astro';
import ProgressContent from '../components/bluesky/ProgressContent';
---

<BlueskyLayout title="進捗 - Bluesky LangApp">
  <ProgressContent client:load />
</BlueskyLayout>

<script>
  // Check authentication on page load
  document.addEventListener('DOMContentLoaded', () => {
    const sessionId = localStorage.getItem('sessionId');
    if (!sessionId) {
      window.location.href = '/';
    }
  });
</script>